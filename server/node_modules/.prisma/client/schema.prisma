generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Farmer {
  id           String    @id @default(uuid())
  name         String
  location     String
  description  String
  image        String
  specialties  String // Stored as JSON string
  rating       Float
  totalReviews Int
  products     Product[]
}

model Product {
  id          String @id @default(uuid())
  name        String
  price       Float
  unit        String
  category    String
  image       String
  description String
  stock       Int
  location    String
  farmer      Farmer @relation(fields: [farmerId], references: [id])
  farmerId    String
}
